<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="dev.develsinthedetails.eatpoopyoucat.GameViewModel" />

        <variable
            name="viewModel"
            type="dev.develsinthedetails.eatpoopyoucat.GameViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:id="@+id/sentenceToDraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:autofillHints="@string/draw_this_sentence"
            android:hint="@string/draw_this_sentence"
            android:text="@{viewModel.sentenceToDraw}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <dev.develsinthedetails.eatpoopyoucat.DrawView
            android:id="@+id/draw_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sentenceToDraw" />

        <LinearLayout
            android:id="@+id/edit_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/draw_view">


            <Button
                android:id="@+id/btn_clearAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/clear"
                android:drawableTop="@drawable/ic_baseline_delete_forever_24"
                android:text="@string/clear" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/save_description"
                android:drawableTop="@drawable/ic_baseline_save_24"
                android:text="@string/save" />

            <Button
                android:id="@+id/btn_erase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/erase_description"
                android:drawableTop="@drawable/ic_eraser_24"
                android:text="@string/erase"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/draw_description"
                android:drawableTop="@drawable/ic_baseline_create_24"
                android:text="@string/draw"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/undo_description"
                android:drawableTop="@drawable/ic_baseline_undo_24"
                android:text="@string/undo" />

            <Button
                android:id="@+id/btn_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/redo_description"
                android:drawableTop="@drawable/ic_baseline_undo_24"
                android:text="@string/redo" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>